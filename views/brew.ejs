  <%- include('partials/header') -%>
  <div class="fixed h-screen w-full bg-slate-400">
    <div class="absolute inset-0 bg-slate-100 bg-[size:20px_20px] opacity-20 blur-[100px]"></div>
  </div>
  <div class="relative p-4 sm:ml-64">
    <div class="flex flex-col items-center p-4 mt-14">      
      <div class="flex flex-col items-center bg-slate-600 rounded-lg mb-12 shadow-xl md:flex-row md:h-96 md:w-5/6">
        <img class="object-cover w-full rounded-t-lg  md:rounded-tl-lg md:rounded-bl-lg md:rounded-tr-none h-96 md:w-48 lg:w-96" src="<%= brew.image %>" alt="brew image">
        <div class="flex flex-col w-full justify-between p-4 space-y-2 leading-normal">
          <h1 class="text-5xl font-bold tracking-tight text-slate-300"><%= brew.name %></h1>
          <h5 class="text-xl font-bold tracking-tight text-slate-300">Tea type: <%= brew.tea %></h5>
          <h5 class="text-xl font-bold tracking-tight text-slate-300">Average temp <%= brew.avgTemp %>Â°</h5>
          <p class="h-28 font-normal text-slate-300"><%= brew.note %></p>
          <div class="flex items-center">
            <form action="/brew/rateBrew/<%= brew.id %>?_method=PUT" method="POST">
              <div class="rate">
                <% let ratedOne = "rate" %>
                <% let ratedTwo = "rate" %>
                <% let ratedThree = "rate" %>
                <% let ratedFour = "rate" %>
                <% let ratedFive = "rate" %>
    
                <% if (brew.rating === 5) { %>
                  <% ratedFive = "rated" %>
                  <% ratedFour = "rated" %>
                  <% ratedThree = "rated" %>
                  <% ratedTwo = "rated" %>
                  <% ratedOne = "rated" %>
                <% } %>
                <% if (brew.rating === 4) { %>
                  <% ratedFive = "" %>
                  <% ratedFour = "rated" %>
                  <% ratedThree = "rated" %>
                  <% ratedTwo = "rated" %>
                  <% ratedOne = "rated" %>
                <% } %>
                <% if (brew.rating === 3) { %>
                  <% ratedFive = "" %>
                  <% ratedFour = "" %>
                  <% ratedThree = "rated" %>
                  <% ratedTwo = "rated" %>
                  <% ratedOne = "rated" %>
                <% } %>
                <% if (brew.rating === 2) { %>
                  <% ratedFive = "" %>
                  <% ratedFour = "" %>
                  <% ratedThree = "" %>
                  <% ratedTwo = "rated" %>
                  <% ratedOne = "rated" %>
                <% } %>
                <% if (brew.rating === 1) { %>
                  <% ratedFive = "" %>
                  <% ratedFour = "" %>
                  <% ratedThree = "" %>
                  <% ratedTwo = "" %>
                  <% ratedOne = "rated" %>
                <% } %>
                <button type="submit" value="1" name="rating" class="">
                  <svg class="w-6 h-6 ms-2" aria-hidden="true" id="<%= ratedOne %>" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 22 20">
                      <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"/>
                  </svg>
                </button>
                <button type="submit" value="2" name="rating" class="">
                  <svg class="w-6 h-6 ms-2" aria-hidden="true" id="<%= ratedTwo %>" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 22 20">
                      <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"/>
                  </svg>
                </button>
                <button type="submit" value="3" name="rating" class="">
                  <svg class="w-6 h-6 ms-2" aria-hidden="true" id="<%= ratedThree %>" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 22 20">
                      <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"/>
                  </svg>
                </button>
                <button type="submit" value="4" name="rating" class="">
                  <svg class="w-6 h-6 ms-2" aria-hidden="true" id="<%= ratedFour %>" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 22 20">
                      <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"/>
                  </svg>
                </button>
                <button type="submit" value="5" name="rating" class="">
                  <svg class="w-6 h-6 ms-2" id="<%= ratedFive %>" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 22 20">
                      <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"/>
                  </svg>
                </button>
              </div>
            </form>
          </div>
          <div class="place-self-end">
            <form action="/brew/deleteBrew/<%= brew.id %>?_method=DELETE" method="post">
              <button type="submit" class="group relative inline-flex h-10 items-center justify-center overflow-hidden rounded-md bg-slate-500 px-6 font-medium text-slate-300">
                <span class="absolute h-0 w-0 rounded-full bg-red-500 transition-all duration-300 group-hover:h-56 group-hover:w-32"></span>
                <span class="relative">Delete</span>
              </button>
            </form>
          </div>
        </div>
      </div>
      <div class="w-full max-w-sm p-4 bg-slate-700 border-2 border-slate-500 rounded-lg shadow sm:p-6 md:p-8 md:max-w-2xl">
        <div class="mb-4">
          <h5 class="text-xl font-medium text-slate-300">Edit Details</h5>
        </div>
        <form class="grid grid-flow-col md:grid-flow-row grid-rows-12 gap-2 md:grid-rows-6 grid-cols-1 md:grid-cols-2" action="/brew/editBrew/<%= brew._id %>?_method=PUT" method="post">   
            <div class="row-span-3 col-span-1">
              <div>
                  <label for="name" class="block mb-2 text-sm font-medium text-slate-300">Name</label>
                  <input type="text" name="name" id="name" class="bg-slate-800 border border-slate-600 text-slate-200 text-sm rounded-lg focus:ring-slate-300 focus:border-slate-300 block w-full p-2.5" value="<%= brew.name %>" placeholder="<%= brew.name %>">
              </div>
              <div>
                  <label for="tea" class="block mb-2 text-sm font-medium text-slate-300">Tea</label>
                  <input type="tea" name="tea" id="tea" class="bg-slate-800 border border-slate-600 text-slate-200 text-sm rounded-lg focus:ring-slate-300 focus:border-slate-300 block w-full p-2.5" value="<%= brew.tea %>" placeholder="<%= brew.tea %>">
              </div>
              <div>
                <label for="avgTemp" class="block mb-2 text-sm font-medium text-slate-300">Average Temperature</label>
                <input type="number" name="avgTemp" id="avgTemp" class="bg-slate-800 border border-slate-600 text-slate-200 text-sm rounded-lg focus:ring-slate-300 focus:border-slate-300 block w-full p-2.5" value="<%= brew.avgTemp %>" placeholder="<%= brew.avgTemp %>">
              </div>
            </div>
            <div class="flex flex-col row-span-3 col-span-1 place-content-center gap-4">
              <div class="relative max-w-sm mt-7 mb-3">
                <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                   <svg class="w-4 h-4 text-slate-200 fill-slate-200" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"/>
                    </svg>
                </div>
                <input datepicker datepicker-buttons data-date="<%= brew.firstFerment %>" type="text" name="firstFerment" class="bg-slate-800 border border-slate-600 text-slate-200 text-sm rounded-lg focus:ring-slate-300 focus:border-slate-300 block w-full ps-10 p-2.5" placeholder="First Fermentation">
              </div>
              <div class="relative max-w-sm mb-3">
                <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                   <svg class="w-4 h-4 text-slate-200 fill-slate-200" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"/>
                    </svg>
                </div>
                <input datepicker datepicker-buttons data-date="<%= brew.secondFerment %>" type="text" name="secondFerment" class="bg-slate-800 border border-slate-600 text-slate-200 text-sm rounded-lg focus:ring-slate-300 focus:border-slate-300 block w-full ps-10 p-2.5" placeholder="Second Fermentation">
              </div>
              <div class="relative max-w-sm">
                <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                   <svg class="w-4 h-4 text-slate-200 fill-slate-200" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"/>
                    </svg>
                </div>
                <input datepicker datepicker-buttons data-date="<%= brew.thirdFerment %>" type="text" name="thirdFerment" class="bg-slate-800 border border-slate-600 text-slate-200 text-sm rounded-lg focus:ring-slate-300 focus:border-slate-300 block w-full ps-10 p-2.5" placeholder="Third Fermentation">
              </div>
            </div>
            <div class="row-span-2 col-span-1">
              <label for="note" class="block mb-2 text-sm font-medium text-slate-200">Note</label>
              <textarea id="note" name="note" rows="4" class="block p-2.5 w-full text-sm text-slate-200 bg-slate-800 rounded-lg border border-slate-600 focus:ring-slate-300" value="<%= brew.note %>" placeholder="<%= brew.note %>"><%= brew.note %></textarea>
            </div>
            <div class="row-span-2 col-span-1">
              <label class="block mt-6 mb-2 text-sm font-medium text-slate-200" for="user_avatar">Replace Picture</label>
              <input class="block text-sm text-slate-200 border-2 border-slate-600 rounded-lg cursor-pointer bg-slate-800 focus:ring-slate-300" aria-describedby="user_avatar_help" id="user_avatar" type="file">
              <div class="mt-1 ml-2 text-sm text-slate-400" id="user_avatar_help">2mb 500x500 png,jpg</div>
            </div>
            <button type="submit" class="col-span-2 row-span-1 place-self-end group relative inline-flex h-10 items-center justify-center overflow-hidden rounded-md bg-slate-500 px-6 font-medium text-slate-300">
              <span class="absolute h-0 w-0 rounded-full bg-slate-800 transition-all duration-300 group-hover:h-56 group-hover:w-32"></span>
              <span class="relative">Save</span>
            </button>
        </form>
      </div>
    </div>
  </div>
  <%- include('partials/footer') -%>