<%- include('partials/header') -%>
<div class="p-4 sm:ml-64">
  <div class="grid grid-flow-row grid-cols-1 grid-rows-6 md:grid-cols-3 md:grid-rows-2 gap-4 p-4 mt-14">      
        <% for(var i=0; i<brews.length; i++) {%>
          <div class="group w-80 h-96 perspective-1000">
            <div class="relative w-full h-full transition-all duration-700 transform-style-3d group-hover:rotate-y-180"> 
              <div class="flex flex-col absolute w-full h-full bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
                <div class="">
                  <img class=" object-cover h-48 w-80" src="<%= brews[i].image%>" alt="brew image" />
                </div>
                <div class="place-self-center mx-2">
                  <h5 class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= brews[i].name%></h5>
                </div>
                <div class="flex flex-row place-self-center my-4">
                  <% let ratedOne = ratedTwo = ratedThree = ratedFour = ratedFive = "fill-slate-600";%>
                  <% switch (brews[i].rating) {
                      case 5:
                        ratedOne = ratedTwo = ratedThree = ratedFour = ratedFive = "fill-amber-400";
                        break;
                      case 4:
                        ratedOne = ratedTwo = ratedThree = ratedFour = "fill-amber-400";
                        break;
                      case 3:
                        ratedOne = ratedTwo = ratedThree = "fill-amber-400";
                        break;
                      case 2:
                        ratedOne = ratedTwo = "fill-amber-400";
                        break;
                      case 1:
                        ratedOne = "fill-amber-400";
                        break;
                      default:
                  } %>
                  <svg class="w-6 h-6 ms-2 <%= ratedOne %>" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 22 20">
                      <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"/>
                  </svg>
                  <svg class="w-6 h-6 ms-2 <%= ratedTwo %>" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 22 20">
                      <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"/>
                  </svg>
                  <svg class="w-6 h-6 ms-2 <%= ratedThree %>" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 22 20">
                      <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"/>
                  </svg>
                  <svg class="w-6 h-6 ms-2 <%= ratedFour %>" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 22 20">
                      <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"/>
                  </svg>
                  <svg class="w-6 h-6 ms-2 <%= ratedFive %>" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 22 20">
                      <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"/>
                  </svg>
                </div>
                <div class="mb-2 ml-6">
                  <h5 class="text-xl tracking-tight text-gray-900 dark:text-white">Tea type: <%= brews[i].tea %></h5>
                </div>
                <div class="ml-6">
                  <h5 class="text-xl tracking-tight text-gray-900 dark:text-white">Average temp <%= brews[i].avgTemp %>Â°</h5>
                </div>
              </div>
              <div class="flex flex-col absolute backface-hidden w-full h-full rotate-y-180 bg-slate-600 border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
                <div class="m-2 mb-4 h-64 w-72 place-self-center border-2 border-red-700 rounded-lg">
                  <p class="font-normal text-gray-700 dark:text-gray-400"><%= brews[i].note%></p>
                </div>
                <a class="place-self-end mt-6 mr-2" href="/brew/<%= brews[i]._id%>">
                  <button class="relative inline-flex items-center justify-center p-0.5 mb-2 me-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-purple-600 to-blue-500 group-hover:from-purple-600 group-hover:to-blue-500 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800">
                    <span class="relative px-5 py-2.5 transition-all ease-in duration-75 dark:bg-gray-900 rounded-md group-hover:bg-opacity-0">
                    EDIT
                    </span>
                  </button>
                </a>
              </div>
            </div>
          </div>
        <% } %>
  </div>
</div>
<%- include('partials/footer') -%>

