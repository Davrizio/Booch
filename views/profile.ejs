<%- include('partials/header') -%>
<div class="p-4 sm:ml-64">
  <div class="grid grid-flow-row grid-cols-1 grid-rows-6 md:grid-cols-3 md:grid-rows-2 gap-4 p-4 mt-14">      
        <% for(var i=0; i<brews.length; i++) {%>
          <div class="group w-96 h-96 perspective-1000">
            <div class="relative w-full h-full transition-all duration-700 transform-style-3d group-hover:rotate-y-180"> 
              <div class="flex flex-col justify-center absolute w-full h-full bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
                <div class="absolute border-red-600">
                  <img class="h-full w-full object-cover" src="<%= brews[i].image%>" alt="brew image" />
                </div>
                <div class="">
                    <a href="/brew/<%= brews[i]._id%>">
                        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= brews[i].name%></h5>
                    </a>
                    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"><%= brews[i].note%></p>
                </div>
              </div>
              <div class="flex flex-col justify-center absolute backface-hidden w-full h-full rotate-y-180 bg-red-500 border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
                <p>BACK</p>
                <p>Leave Me</p>
              </div>
            </div>
          </div>
        <% } %>
  </div>
</div>
<%- include('partials/footer') -%>

